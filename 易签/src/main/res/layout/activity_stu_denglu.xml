<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"

    tools:context="com.du.easysignin.activity.StuLoginActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_notification"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_stu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:hint="请输入学号："/>

        <EditText
            android:id="@+id/et_stu_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码："
            android:inputType="textPassword"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_welcome_ctrlbar"
        android:gravity="center"

        android:orientation="horizontal">



        <Button
            android:id="@+id/stu_btn_regist"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="42dip"
            android:layout_marginLeft="9dip"
            android:layout_marginRight="9dip"
            android:background="@drawable/btn_bottombar"
            android:gravity="center"
            android:text="注册帐号"
            android:textColor="@color/profile_bottom_text_color"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/stu_btn_login"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="42dip"
            android:layout_marginLeft="9dip"
            android:layout_marginRight="9dip"
            android:background="@drawable/btn_bottombar"
            android:gravity="center"
            android:text="学生登录"
            android:textColor="@color/profile_bottom_text_color"
            android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>
