<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/normal_bg"
    android:orientation="vertical"
    tools:context="com.du.easysignin.activity.TeaHomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />


    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/bottom_tab_bg"

        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rad_bt_1"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/bt_home_tab"
            android:text="首页"/>

        <RadioButton
            android:id="@+id/rad_bt_2"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/btn_tab_news_selector"
            android:text="新闻中心"/>

        <RadioButton
            android:id="@+id/rad_bt_3"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/btn_tab_smart_selector"
            android:text="智慧服务"/>


        <RadioButton
            android:id="@+id/rad_bt_4"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/btn_tab_setting_selector"
            android:text="设置"/>
    </RadioGroup>

</LinearLayout>
